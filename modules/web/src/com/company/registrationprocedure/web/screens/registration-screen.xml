<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://caption"
        messagesPack="com.company.registrationprocedure.web.screens">
    <layout>
        <form>
            <column childrenCaptionWidth="AUTO" width="300">
                <textField id="login" required="true" caption="Login">
                </textField>
                <passwordField id="passwordField" required="true" caption="Password">
                    <validators>
                        <size message="msg://passwordLengthErrorMessage" min="4" max="15"/>
                    </validators>
                </passwordField>
                <textField id="emailField" required="true"
                           textChangeTimeout="400" caption="Email">
                    <validators>
                        <email message="msg://emailWrongCaption"/>
                    </validators>
                </textField>
                <button id="register" caption="Register"/>
            </column>
        </form>
    </layout>
</window>