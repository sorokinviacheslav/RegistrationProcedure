<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd"
        extends="com/company/registrationprocedure/web/screens/abstract-user-view-screen.xml">
    <data>
        <collection id="organizationsDc" class="com.company.registrationprocedure.entity.Organization"
                    view="organization-view">
            <loader id="organizationsDl" dynamicAttributes="true" firstResult="1" maxResults="20">
                <query>
                    <![CDATA[select e from registrationprocedure_Organization e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <form>
            <column>
                <passwordField id="passwordField" caption="Password" required="true" ext:index="1"/>
                <passwordField id="passwordConfirmField" caption="repeatPassword" required="true" ext:index="2"/>
                <pickerField id="organizationPickerField" metaClass="registrationprocedure_Organization" property="name"
                             required="true" caption="Organization">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <lookupPickerField id="organizationLookupPickerField" optionsContainer="organizationsDc"
                                   captionProperty="name" required="true" filterMode="NO">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                    </actions>
                </lookupPickerField>
                <buttonsPanel>
                    <button id="register" caption="Register"/>
                    <button id="cancel" caption="Cancel"/>
                </buttonsPanel>
            </column>
        </form>
    </layout>
</window>
