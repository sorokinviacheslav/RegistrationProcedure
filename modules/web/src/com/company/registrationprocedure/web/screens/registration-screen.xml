<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd">
    <data>
        <instance id="userExtDc" class="com.company.registrationprocedure.entity.UserExt" view="userExt-view_7">
            <loader id="userExtDl"/>
            <instance id="organizationDc" property="organization"/>
        </instance>
        <collection id="organizationsDc" class="com.company.registrationprocedure.entity.Organization"
                    view="organization-view">
            <loader id="organizationsDl" dynamicAttributes="true">
                <query>
                    <![CDATA[select e from registrationprocedure_Organization e]]>
                </query>
            </loader>
        </collection>
        <collection id="roleExtsDc" class="com.company.registrationprocedure.entity.RoleExt" view="roleExt-view">
            <loader id="roleExtsDl">
                <query>
                    <![CDATA[select e from registrationprocedure_RoleExt e]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="next" caption="Далее"/>
        <action id="back" caption="Назад"/>
        <action id="register" caption="Регистрация"/>
        <action id="cancel" caption="Закрыть"/>
    </actions>
    <layout>
        <tabSheet id="tabSheet">
            <tab caption="User Information" margin="true,false,false,false" spacing="true" id="0" expand="userFragment">
                <fragment id="userFragment" screen="registrationprocedure_UserExtFragment">
                </fragment>
                <buttonsPanel>
                    <button action="cancel"/>
                    <button action="next"/>
                </buttonsPanel>
            </tab>
            <tab caption="Organization Information" margin="true,false,false,false" spacing="true" id="1" enable="false"
                 expand="organizationFragment">
                <lookupPickerField id="organizationLookupPickerField" optionsContainer="organizationsDc"
                                   filterMode="NO" caption="Organization" captionProperty="name" dataContainer="userExtDc" property="organization">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                    </actions>
                </lookupPickerField>
                <fragment id="organizationFragment" screen="registrationprocedure_OrganizationFragment"/>
                <buttonsPanel>
                    <button action="cancel"/>
                    <button action="back"/>
                    <button action="next"/>
                </buttonsPanel>
            </tab>
            <tab caption="System Roles" margin="true,false,false,false" spacing="true" enable="false" id="2">
                <fragment id="roleFragment" screen="registrationprocedure_RoleExtFragment"/>
                <buttonsPanel>
                    <button action="back"/>
                    <button action="cancel"/>
                    <button action="register"/>
                </buttonsPanel>
            </tab>
        </tabSheet>
    </layout>
</window>
