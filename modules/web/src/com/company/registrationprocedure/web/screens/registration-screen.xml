<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd">
    <data>
        <instance id="userExtDc" class="com.company.registrationprocedure.entity.UserExt" view="userExt-view_9">
            <loader id="userExtDl"/>
            <instance id="organizationDc" property="organization"/>
        </instance>
        <collection id="organizationsDc" class="com.company.registrationprocedure.entity.Organization"
                    view="organization-view">
            <loader id="organizationsDl" dynamicAttributes="true">
                <query>
                    <![CDATA[select e from registrationprocedure_Organization e]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="next" caption="Next"/>
        <action id="back" caption="Back"/>
    </actions>
    <layout>
        <form>
            <column>
                <buttonsPanel>
                    <button id="register" caption="Register"/>
                    <button id="cancel" caption="Cancel"/>
                </buttonsPanel>
            </column>
        </form>
        <tabSheet id="tabSheet">
            <tab caption="User Information" margin="true,false,false,false" spacing="true" id="0">
                <fragment id="fragment" screen="registrationprocedure_UserExtFragment">
                </fragment>
                <buttonsPanel>
                    <button action="back"/>
                    <button action="next"/>
                </buttonsPanel>
            </tab>
            <tab caption="Organization Information" margin="true,false,false,false" spacing="true" id="1">
                <lookupPickerField id="organizationLookupPickerField" optionsContainer="organizationsDc"
                                   filterMode="NO" caption="Organization" captionProperty="name" dataContainer="userExtDc" property="organization">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                    </actions>
                </lookupPickerField>
                <fragment id="fragment_1" screen="registrationprocedure_OrganizationFragment"/>
                <buttonsPanel>
                    <button action="back"/>
                    <button action="next"/>
                </buttonsPanel>
            </tab>
            <tab caption="System Roles" margin="true,false,false,false" spacing="true" id="2">
                <buttonsPanel>
                    <button action="back"/>
                    <button action="next"/>
                </buttonsPanel>
            </tab>
        </tabSheet>
    </layout>
</window>
