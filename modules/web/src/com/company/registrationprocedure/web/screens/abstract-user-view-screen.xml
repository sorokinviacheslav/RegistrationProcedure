<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://caption"
        messagesPack="com.company.registrationprocedure.web.screens">
    <layout>
        <form>
            <column>
                <textField id="login" required="true" caption="Login">
                </textField>
                <textField id="emailField" required="true"
                           textChangeTimeout="400" caption="Email">
                    <validators>
                        <email message="msg://emailWrongCaption"/>
                    </validators>
                </textField>
                <textField id="firstNameField" caption="First Name" required="true"/>
                <textField id="lastNameField" caption="Last Name" required="true"/>
                <textField id="middleNameField" caption="Middle Name" required="true"/>
                <maskedField id="phoneField" caption="Phone Number" valueMode="masked" mask="+7(###)###-##-##"
                             required="true"/>
                <checkBox id="emailNotificationsCheckBox" caption="Email Notifications"/>
                <checkBox id="hideEmail" caption="Hide Email"/>
            </column>
        </form>
    </layout>
</window>