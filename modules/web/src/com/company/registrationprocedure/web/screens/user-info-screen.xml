<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd"
        extends="com/company/registrationprocedure/web/screens/abstract-user-view-screen.xml">
    <data>
        <instance id="userExtDc" class="com.company.registrationprocedure.entity.UserExt" view="userExt-view_6">
            <loader id="userExtDl"/>
        </instance>
    </data>
    <layout>
        <form editable="false">
            <column>
                <textField id="login" required="false" editable="false" dataContainer="userExtDc" property="login"/>
                <textField id="emailField" editable="false" dataContainer="userExtDc" property="email"/>
                <textField id="firstNameField" editable="false" dataContainer="userExtDc" property="firstName"/>
                <textField id="lastNameField" editable="false" dataContainer="userExtDc" property="lastName"/>
                <textField id="middleNameField" editable="false" dataContainer="userExtDc" property="middleName"/>
                <maskedField id="phoneField" editable="false" dataContainer="userExtDc" property="phoneNumber"/>
                <checkBox id="emailNotificationsCheckBox" editable="false" dataContainer="userExtDc"
                          property="recieveEmailNotifications"/>
                <checkBox id="hideEmail" editable="false" dataContainer="userExtDc" property="hideEmail"/>
                <textField id="organizationField" caption="Organization" dataContainer="userExtDc" editable="false"
                           property="organization"/>
            </column>
        </form>
    </layout>
</window>
